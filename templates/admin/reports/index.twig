{#
    ===========================================
    ADMIN - RAPPORTS & STATISTIQUES (US-27)
    ===========================================
    Génération de rapports d'activité avec filtres temporels.
    Variables : totalSales, ordersCount, salesByCategory, dateFrom, dateTo
#}
{% extends "base.twig" %}

{% block title %} - Rapports{% endblock %}

{% block content %}
<h1>Rapports & Statistiques</h1>
<p>Visualisez et exportez les données d'activité du site.</p>

<!-- Filtres de période -->
<div class="admin-card mb-3">
    <h3>Filtrer par période</h3>
    <form action="index.php" method="GET" class="filter-form">
        <input type="hidden" name="action" value="reports">
        <div class="form-group">
            <label>Date de début</label>
            <input type="date" name="date_start" value="{{ date_start ?? "now"|date('Y-m-01') }}">
        </div>
        <div class="form-group">
            <label>Date de fin</label>
            <input type="date" name="date_end" value="{{ date_end ?? "now"|date('Y-m-d') }}">
        </div>
        <div class="form-group">
            <button type="submit" class="btn">Filtrer</button>
        </div>
    </form>
</div>

<!-- Statistiques générales -->
<div class="dashboard-stats mb-3">
    <div class="admin-card text-center">
        <h3>Commandes</h3>
        <p class="stat-number text-primary">{{ stats.total_orders ?? 0 }}</p>
        <small>sur la période</small>
    </div>
    <div class="admin-card text-center">
        <h3>Chiffre d'Affaires</h3>
        <p class="stat-number text-success">{{ (stats.total_revenue ?? 0)|number_format(2, ',', ' ') }} €</p>
        <small>sur la période</small>
    </div>
    <div class="admin-card text-center">
        <h3>Nouveaux Users</h3>
        <p class="stat-number text-info">{{ stats.new_users ?? 0 }}</p>
        <small>sur la période</small>
    </div>
    <div class="admin-card text-center">
        <h3>Articles publiés</h3>
        <p class="stat-number text-secondary">{{ stats.new_articles ?? 0 }}</p>
        <small>sur la période</small>
    </div>
</div>

<!-- Graphique simplifié (barres CSS) -->
<div class="admin-card mb-3">
    <h3>Ventes par catégorie</h3>
    {% if salesByCategory is defined and salesByCategory|length > 0 %}
        <div class="chart-container">
            {% set maxSales = 0 %}
            {% for cat in salesByCategory %}
                {% if cat.total > maxSales %}
                    {% set maxSales = cat.total %}
                {% endif %}
            {% endfor %}
            {% for cat in salesByCategory %}
                {% set percentage = maxSales > 0 ? (cat.total / maxSales) * 100 : 0 %}
                <div class="chart-bar-container mb-2">
                    <div class="d-flex justify-content-between mb-1">
                        <span>{{ cat.category ?? 'Non catégorisé' }}</span>
                        <span><strong>{{ cat.total|number_format(2, ',', ' ') }} €</strong></span>
                    </div>
                    <div class="progress">
                        <div class="progress-bar bg-primary" style="width: {{ percentage }}%"></div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p class="text-muted">Aucune donnée de vente sur cette période.</p>
    {% endif %}
</div>

<!-- Boutons d'export -->
<div class="admin-card">
    <h3>Exporter les données</h3>
    <p>Téléchargez les rapports au format de votre choix.</p>
    
    <div class="btn-group">
        <a href="index.php?action=export_csv&type=orders&date_start={{ date_start ?? '' }}&date_end={{ date_end ?? '' }}" 
           class="btn btn-outline">
            Export Commandes (CSV)
        </a>
        <a href="index.php?action=export_csv&type=users&date_start={{ date_start ?? '' }}&date_end={{ date_end ?? '' }}" 
           class="btn btn-outline">
            Export Utilisateurs (CSV)
        </a>
        <a href="index.php?action=export_csv&type=products&date_start={{ date_start ?? '' }}&date_end={{ date_end ?? '' }}" 
           class="btn btn-outline">
            Export Produits (CSV)
        </a>
    </div>
    
    <hr>
    
    <div class="btn-group">
        <a href="index.php?action=export_pdf&date_start={{ date_start ?? '' }}&date_end={{ date_end ?? '' }}" 
           class="btn btn-secondary">
            Rapport complet (PDF)
        </a>
    </div>
</div>

<!-- Tableau des dernières commandes -->
<div class="admin-card mt-3">
    <h3>Dernières commandes</h3>
    {% if recentOrders is defined and recentOrders|length > 0 %}
        <div class="table-responsive">
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Réf.</th>
                        <th>Client</th>
                        <th>Montant</th>
                        <th>Statut</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in recentOrders %}
                        <tr>
                            <td>#{{ order.id }}</td>
                            <td>{{ order.username ?? 'Invité' }}</td>
                            <td>{{ order.total_amount|number_format(2, ',', ' ') }} €</td>
                            <td>
                                {% if order.status == 'paid' %}
                                    <span class="badge badge-success">Payé</span>
                                {% elseif order.status == 'pending' %}
                                    <span class="badge badge-warning">En attente</span>
                                {% else %}
                                    <span class="badge badge-secondary">{{ order.status }}</span>
                                {% endif %}
                            </td>
                            <td>{{ order.created_at|date('d/m/Y H:i') }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% else %}
        <p class="text-muted">Aucune commande sur cette période.</p>
    {% endif %}
</div>
{% endblock %}
