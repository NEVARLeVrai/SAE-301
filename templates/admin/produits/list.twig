{#
    TEMPLATE: templates/admin/produits/list.twig
    PURPOSE: Liste et gestion des produits (admin/musicien)
    VARIABLES: `liste_produits`, `breadcrumbs`, `admin_permissions` — fournis par le contrôleur admin
#}
{% extends "base.twig" %}

{% block title %} - Produits{% endblock %}

{% block content %}
<h1>Gestion des Produits</h1>

<div class="mb-2">
    {% if admin_permissions.manage_products %}
        <a href="index.php?action=create_produit" class="btn">+ Nouveau Produit</a>
    {% endif %}
</div>

<div class="table-responsive">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Catégorie</th>
                <th>Type</th>
                <th>Statut</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if liste_produits is defined and liste_produits|length > 0 %}
                {% for produit in liste_produits %}
                    <tr>
                        <td>{{ produit.id }}</td>
                        <td>{{ produit.name }}</td>
                        <td>{{ produit.price|number_format(2, ',', ' ') }} €</td>
                        <td>{{ produit.stock }}</td>
                        <td>{{ produit.category }}</td>
                        <td>{{ produit.type }}</td>
                        <td>
                            <span class="badge badge-{{ produit.status == 'approved' ? 'success' : (produit.status == 'pending' ? 'warning' : 'danger') }}">
                                {{ produit.status|capitalize }}
                            </span>
                        </td>
                        <td class="text-center">
                            {% if produit.status == 'pending' and (admin_permissions.moderate_content or admin_permissions.manage_annonces) %}
                                <a href="index.php?action=approve_product&id={{ produit.id }}" class="btn-small btn-success" onclick="return confirm('Approuver cette annonce ?')">Approuver</a>
                                <a href="index.php?action=reject_product&id={{ produit.id }}" class="btn-small btn-warning" onclick="return confirm('Rejeter cette annonce ?')">Rejeter</a>
                            {% else %}
                                {% if admin_permissions.manage_products or admin_permissions.manage_annonces %}
                                    <a href="index.php?action=edit_produit&id={{ produit.id }}" class="btn-small">Modifier</a>
                                    <a href="index.php?action=delete_produit&id={{ produit.id }}" class="btn-small btn-danger" onclick="return confirm('Êtes-vous sûr ?')">Supprimer</a>
                                {% endif %}
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="8" class="text-center">Aucun produit trouvé.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
