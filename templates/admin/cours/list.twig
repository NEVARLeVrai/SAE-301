{#
    TEMPLATE: templates/admin/cours/list.twig
    PURPOSE: Liste et gestion des cours (admin)
    VARIABLES: `liste_cours`, `breadcrumbs` — fournis par le contrôleur admin
#}
{% extends "base.twig" %}

{% block title %} - Cours{% endblock %}

{% block content %}
<h1>Gestion des Cours</h1>

<div class="mb-2">
    <a href="index.php?action=create_cours" class="btn">+ Nouveau Cours</a>
</div>

<div class="table-responsive">
    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Titre</th>
                <th>Instrument</th>
                <th>Niveau</th>
                <th>Catégorie</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% if liste_cours is defined and liste_cours|length > 0 %}
                {% for cours in liste_cours %}
                    <tr>
                        <td>{{ cours.id }}</td>
                        <td>{{ cours.title }}</td>
                        <td>{{ cours.instrument }}</td>
                        <td>
                            <span class="badge badge-{{ cours.level == 'debutant' ? 'success' : (cours.level == 'intermediaire' ? 'warning' : 'danger') }}">
                                {{ cours.level|capitalize }}
                            </span>
                        </td>
                        <td>{{ cours.category }}</td>
                        <td class="text-center">
                            <a href="index.php?action=edit_cours&id={{ cours.id }}" class="btn-small">Modifier</a>
                            <a href="index.php?action=delete_cours&id={{ cours.id }}" class="btn-small btn-danger" onclick="return confirm('Supprimer ce cours ?');">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">Aucun cours disponible.</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>
{% endblock %}
